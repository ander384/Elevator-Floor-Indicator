<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtExhibitActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/art_exhibit_image"/>

    <TextView
        android:id="@+id/tv_input_code"
        android:textSize="35sp"
        android:textColor="#d7801d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="95dp"
        android:fontFamily="@font/league_gothic_regular"
        android:text="" />

    <TextView
        android:id="@+id/tv_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:layout_marginLeft="75dp"
        android:fontFamily="@font/league_gothic_regular"
        android:onClick="onClickNumberButton"
        android:text="0"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/tv_1"
        android:text="1"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_0"/>

    <TextView
        android:id="@+id/tv_2"
        android:text="2"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_1"/>

    <TextView
        android:id="@+id/tv_3"
        android:text="3"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_2"/>

    <TextView
        android:id="@+id/tv_4"
        android:text="4"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_3"/>

    <TextView
        android:id="@+id/tv_5"
        android:text="5"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_4"/>

    <TextView
        android:id="@+id/tv_6"
        android:text="6"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_5"/>

    <TextView
        android:id="@+id/tv_7"
        android:text="7"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_6"/>

    <TextView
        android:id="@+id/tv_8"
        android:text="8"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_7"/>

    <TextView
        android:id="@+id/tv_9"
        android:text="9"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickNumberButton"
        android:layout_toEndOf="@+id/tv_8"/>

    <TextView
        android:id="@+id/tv_enter"
        android:text="ENTER"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickEnter"
        android:layout_toEndOf="@+id/tv_9"/>
    <TextView
        android:id="@+id/tv_clear"
        android:text="CLEAR"
        android:fontFamily="@font/league_gothic_regular"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:onClick="onClickClear"
        android:layout_toEndOf="@+id/tv_enter"/>

</RelativeLayout>